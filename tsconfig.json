{
  "compilerOptions": {
    "emitDeclarationOnly": true,
    "declaration": true,
    "baseUrl": ".",
    "rootDir": "./src",
    "outDir": "./build",
    "diagnostics": true,
    "extendedDiagnostics": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["dom", "es6", "es7", "es2017.object"],
    "module": "esnext",
    "moduleResolution": "node",

    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "downlevelIteration": true,

    "pretty": true,
    "removeComments": true,
    "target": "esnext",

    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "**/*.test.ts"
  ]
}
